<div class="container mb-5">

<h1>New</h1>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :amount %>
  <%= f.association :ingredient %>
  <%= f.submit "add a dose", class: "btn btn-primary" %>

  <%= link_to "Back to cocktail", cocktail_path(@cocktail), class: "btn btn-secondary" %>

<% end %>

</div>