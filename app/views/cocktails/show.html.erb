<div class="card-cocktail">
  <div class="card-cocktail-infos">
    <div>
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
  <div class="card-cocktail-column">
  <img src="https://source.unsplash.com/1600x900/?cocktail">
  <div class="card-cocktail-details">

    <ul class="list-group">
      <% @doses.each do |dose| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%=dose.ingredient.name%>
        <span class="badge badge-primary badge-pill"><%=dose.amount%> cl</span>
        <span>
          <%= link_to dose_path(dose), 
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-xs'  do %>
          <span>Delete</span>
          <% end %>
        </span>
      </li>
      <% end %>
    </ul>
  </div>
  </div>
  <ul class="list-group">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to "Back to list", cocktails_path, class: "btn btn-secondary" %>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
    </li>
  </ul>
</div>