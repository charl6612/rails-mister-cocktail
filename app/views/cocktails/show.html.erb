<div class="container mb-5">
  <div class="card-cocktail">
    <h2><%= @cocktail.name %></h2>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
    </div>
    <% @doses.each do |dose| %>
    <%=dose.ingredient.name%>
    <%= link_to dose_path(dose), 
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-xs'  do %>
    <span>Delete</span>
    <% end %>
    <% end %>
    <ul class="list-group">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to "Back to list", cocktails_path, class: "btn btn-secondary" %>
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
      </li>
    </ul>
  </div>
</div>